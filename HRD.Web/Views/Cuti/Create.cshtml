<!-- HRD.Web/Views/Cuti/Create.cshtml -->
@model HRD.Web.Models.DTOs.CreateCutiRequest
@{
    ViewData["Title"] = "Ajukan Cuti";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-calendar-plus"></i> Ajukan Cuti Baru
                </h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create" id="cutiForm">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <!-- Jenis Cuti -->
                    <div class="mb-3">
                        <label asp-for="JenisCuti" class="form-label">
                            <i class="bi bi-tag"></i> Jenis Cuti <span class="text-danger">*</span>
                        </label>
                        <select asp-for="JenisCuti" class="form-select">
                            <option value="">-- Pilih Jenis Cuti --</option>
                            <option value="Tahunan">🏖️ Cuti Tahunan</option>
                            <option value="Sakit">🤒 Cuti Sakit</option>
                            <option value="Melahirkan">👶 Cuti Melahirkan</option>
                            <option value="Menikah">💒 Cuti Menikah</option>
                            <option value="Duka Cita">😢 Cuti Duka Cita</option>
                            <option value="Izin Khusus">📋 Izin Khusus</option>
                        </select>
                        <span asp-validation-for="JenisCuti" class="text-danger"></span>
                    </div>

                    <!-- Tanggal Range -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TglMulai" class="form-label">
                                    <i class="bi bi-calendar-date"></i> Tanggal Mulai <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TglMulai" type="date" class="form-control" id="tglMulai" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="TglMulai" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TglSelesai" class="form-label">
                                    <i class="bi bi-calendar-check"></i> Tanggal Selesai <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TglSelesai" type="date" class="form-control" id="tglSelesai" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="TglSelesai" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Duration Display -->
                    <div class="mb-3">
                        <div class="alert alert-info" id="durationDisplay" style="display: none;">
                            <i class="bi bi-calendar-week"></i> 
                            <span id="durationText">Durasi cuti akan dihitung otomatis</span>
                        </div>
                    </div>

                    <!-- Alasan -->
                    <div class="mb-3">
                        <label asp-for="Alasan" class="form-label">
                            <i class="bi bi-chat-text"></i> Alasan Cuti
                        </label>
                        <textarea asp-for="Alasan" class="form-control" rows="4" 
                                  placeholder="Jelaskan alasan pengajuan cuti Anda..."></textarea>
                        <span asp-validation-for="Alasan" class="text-danger"></span>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Alasan yang jelas akan membantu proses persetujuan
                        </div>
                    </div>

                    <!-- Quick Templates -->
                    <div class="mb-3">
                        <label class="form-label">
                            <i class="bi bi-lightning"></i> Template Cepat
                        </label>
                        <div class="d-flex flex-wrap gap-2">
                            <button type="button" class="btn btn-outline-primary btn-sm" onclick="setTemplate('vacation')">
                                🏖️ Liburan
                            </button>
                            <button type="button" class="btn btn-outline-success btn-sm" onclick="setTemplate('sick')">
                                🤒 Sakit
                            </button>
                            <button type="button" class="btn btn-outline-info btn-sm" onclick="setTemplate('family')">
                                👨‍👩‍👧‍👦 Keluarga
                            </button>
                            <button type="button" class="btn btn-outline-warning btn-sm" onclick="setTemplate('personal')">
                                🏠 Urusan Pribadi
                            </button>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Cuti")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Kembali
                        </a>
                        <div>
                            <button type="button" class="btn btn-outline-primary me-2" onclick="previewRequest()">
                                <i class="bi bi-eye"></i> Preview
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Ajukan Cuti
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Preview Modal -->
        <div class="modal fade" id="previewModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="bi bi-eye"></i> Preview Pengajuan Cuti
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body" id="previewContent">
                        <!-- Preview content will be populated by JavaScript -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                        <button type="button" class="btn btn-primary" onclick="submitForm()">
                            <i class="bi bi-send"></i> Confirm & Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Calculate duration when dates change
        document.getElementById('tglMulai').addEventListener('change', calculateDuration);
        document.getElementById('tglSelesai').addEventListener('change', calculateDuration);

        function calculateDuration() {
            const startDate = document.getElementById('tglMulai').value;
            const endDate = document.getElementById('tglSelesai').value;
            
            if (startDate && endDate) {
                const start = new Date(startDate);
                const end = new Date(endDate);
                
                if (end >= start) {
                    const diffTime = Math.abs(end - start);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;
                    
                    // Calculate working days (exclude weekends)
                    let workingDays = 0;
                    for (let d = new Date(start); d <= end; d.setDate(d.getDate() + 1)) {
                        if (d.getDay() !== 0 && d.getDay() !== 6) { // Not Sunday or Saturday
                            workingDays++;
                        }
                    }
                    
                    document.getElementById('durationDisplay').style.display = 'block';
                    document.getElementById('durationText').textContent = 
                        `Durasi: ${diffDays} hari kalendar (${workingDays} hari kerja)`;
                } else {
                    document.getElementById('durationDisplay').style.display = 'none';
                }
            } else {
                document.getElementById('durationDisplay').style.display = 'none';
            }
        }

        // Quick templates
        function setTemplate(type) {
            const alasanField = document.querySelector('textarea[name="Alasan"]');
            const jenisCutiField = document.querySelector('select[name="JenisCuti"]');
            
            const templates = {
                vacation: {
                    jenis: 'Tahunan',
                    alasan: 'Liburan bersama keluarga'
                },
                sick: {
                    jenis: 'Sakit',
                    alasan: 'Kondisi tidak fit untuk bekerja, perlu istirahat'
                },
                family: {
                    jenis: 'Izin Khusus',
                    alasan: 'Urusan keluarga yang mendesak'
                },
                personal: {
                    jenis: 'Izin Khusus',
                    alasan: 'Urusan pribadi yang tidak dapat ditunda'
                }
            };
            
            if (templates[type]) {
                jenisCutiField.value = templates[type].jenis;
                alasanField.value = templates[type].alasan;
            }
        }

        // Preview functionality
        function previewRequest() {
            const jenisCuti = document.querySelector('select[name="JenisCuti"]').value;
            const tglMulai = document.getElementById('tglMulai').value;
            const tglSelesai = document.getElementById('tglSelesai').value;
            const alasan = document.querySelector('textarea[name="Alasan"]').value;
            
            if (!jenisCuti || !tglMulai || !tglSelesai) {
                alert('Mohon lengkapi jenis cuti dan tanggal terlebih dahulu');
                return;
            }
            
            const startDate = new Date(tglMulai);
            const endDate = new Date(tglSelesai);
            const diffDays = Math.ceil(Math.abs(endDate - startDate) / (1000 * 60 * 60 * 24)) + 1;
            
            const previewHtml = `
                <div class="table-responsive">
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Jenis Cuti:</strong></td>
                            <td>${jenisCuti}</td>
                        </tr>
                        <tr>
                            <td><strong>Tanggal Mulai:</strong></td>
                            <td>${new Date(tglMulai).toLocaleDateString('id-ID', { 
                                weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' 
                            })}</td>
                        </tr>
                        <tr>
                            <td><strong>Tanggal Selesai:</strong></td>
                            <td>${new Date(tglSelesai).toLocaleDateString('id-ID', { 
                                weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' 
                            })}</td>
                        </tr>
                        <tr>
                            <td><strong>Durasi:</strong></td>
                            <td>${diffDays} hari</td>
                        </tr>
                        <tr>
                            <td><strong>Alasan:</strong></td>
                            <td>${alasan || '<em>Tidak ada alasan</em>'}</td>
                        </tr>
                        <tr>
                            <td><strong>Status:</strong></td>
                            <td><span class="badge bg-warning">Pending</span></td>
                        </tr>
                    </table>
                </div>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    Pengajuan akan dikirim ke HRD untuk diproses dan akan mendapat notifikasi melalui email.
                </div>
            `;
            
            document.getElementById('previewContent').innerHTML = previewHtml;
            const modal = new bootstrap.Modal(document.getElementById('previewModal'));
            modal.show();
        }

        function submitForm() {
            document.getElementById('cutiForm').submit();
        }

        // Auto-set end date when start date is selected (for single day leave)
        document.getElementById('tglMulai').addEventListener('change', function() {
            const endDateField = document.getElementById('tglSelesai');
            if (!endDateField.value) {
                endDateField.value = this.value;
                calculateDuration();
            }
        });

        // Validate date range
        document.getElementById('cutiForm').addEventListener('submit', function(e) {
            const startDate = new Date(document.getElementById('tglMulai').value);
            const endDate = new Date(document.getElementById('tglSelesai').value);
            
            if (endDate < startDate) {
                e.preventDefault();
                alert('Tanggal selesai tidak boleh lebih awal dari tanggal mulai');
                return false;
            }
            
            // Show loading state
            const submitBtn = document.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="spinner-border spinner-border-sm me-2"></i>Mengirim...';
        });
    </script>
}

