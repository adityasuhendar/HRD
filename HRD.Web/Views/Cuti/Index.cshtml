<!-- HRD.Web/Views/Cuti/Index.cshtml - Enhanced Employee Leave List -->
@model List<HRD.Web.Models.DTOs.CutiResponse>
@{
    ViewData["Title"] = "Riwayat Cuti Saya";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="bi bi-calendar-check text-primary"></i> Riwayat Cuti Saya
        </h2>
        <p class="text-muted">Kelola dan pantau pengajuan cuti Anda</p>
    </div>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Ajukan Cuti Baru
    </a>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <i class="bi bi-check-circle display-6"></i>
                <h4>@Model.Count(c => c.StatusPersetujuan == "Disetujui")</h4>
                <small>Disetujui</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <i class="bi bi-clock display-6"></i>
                <h4>@Model.Count(c => c.StatusPersetujuan == "Pending")</h4>
                <small>Menunggu</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <i class="bi bi-x-circle display-6"></i>
                <h4>@Model.Count(c => c.StatusPersetujuan == "Ditolak")</h4>
                <small>Ditolak</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <i class="bi bi-calendar-week display-6"></i>
                <h4>@Model.Where(c => c.StatusPersetujuan == "Disetujui").Sum(c => c.JumlahHari)</h4>
                <small>Total Hari</small>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Jenis Cuti</th>
                            <th>Tanggal</th>
                            <th>Durasi</th>
                            <th>Status</th>
                            <th>Tanggal Dibuat</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cuti in Model.OrderByDescending(c => c.TglDibuat))
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@cuti.JenisCuti</span>
                                </td>
                                <td>
                                    @cuti.TglMulai.ToString("dd/MM/yyyy")
                                    @if (cuti.TglMulai != cuti.TglSelesai)
                                    {
                                        <br>
                            
                                        <small class="text-muted">s/d @cuti.TglSelesai.ToString("dd/MM/yyyy")</small>
                                    }
                                </td>
                                <td>
                                    <strong>@cuti.JumlahHari</strong>
                                    <small class="text-muted">hari</small>
                                </td>
                                <td>
                                    @if (cuti.StatusPersetujuan == "Pending")
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-clock"></i> Menunggu
                                        </span>
                                    }
                                    else if (cuti.StatusPersetujuan == "Disetujui")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check"></i> Disetujui
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x"></i> Ditolak
                                        </span>
                                    }
                                </td>
                                <td>
                                    @cuti.TglDibuat.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = cuti.IdCuti })"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> Detail
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-calendar-x display-1 text-muted"></i>
        <h4 class="mt-3">Belum Ada Pengajuan Cuti</h4>
        <p class="text-muted">Mulai dengan mengajukan cuti pertama Anda</p>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="bi bi-plus"></i> Ajukan Cuti Pertama
        </a>
    </div>
}