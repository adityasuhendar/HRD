@model HRD.Web.Models.DTOs.CreateKaryawanRequest
@{
    ViewData["Title"] = "Tambah Karyawan Baru";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person-plus"></i> Tambah Karyawan Baru
                </h4>
            </div>
            <div class="card-body">

                @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i> @ViewBag.Error
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    </div>
                }

                <form method="post" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Account Information Section -->
                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2 mb-3">
                                <i class="bi bi-key"></i> Informasi Akun Login
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">
                                    <i class="bi bi-person-circle"></i> Username <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Username" class="form-control" placeholder="contoh: john.doe" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> Username untuk login ke sistem
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email Personal <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="john.personal@gmail.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="form-text">Email pribadi untuk login</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">
                                    <i class="bi bi-shield-lock"></i> Password <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Minimal 6 karakter" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="form-text">Password default: password123</div>
                            </div>
                        </div>
                    </div>

                    <!-- Employee Information Section -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2 mb-3">
                                <i class="bi bi-person-badge"></i> Informasi Karyawan
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="NIK" class="form-label">
                                    <i class="bi bi-credit-card"></i> NIK <span class="text-danger">*</span>
                                </label>
                                <input asp-for="NIK" class="form-control" placeholder="EMP003" />
                                <span asp-validation-for="NIK" class="text-danger"></span>
                                <div class="form-text">Nomor Induk Karyawan</div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="mb-3">
                                <label asp-for="NamaLengkap" class="form-label">
                                    <i class="bi bi-person"></i> Nama Lengkap <span class="text-danger">*</span>
                                </label>
                                <input asp-for="NamaLengkap" class="form-control" placeholder="John Doe Smith" />
                                <span asp-validation-for="NamaLengkap" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="EmailKantor" class="form-label">
                                    <i class="bi bi-building"></i> Email Kantor <span class="text-danger">*</span>
                                </label>
                                <input asp-for="EmailKantor" type="email" class="form-control" placeholder="john.doe@company.com" />
                                <span asp-validation-for="EmailKantor" class="text-danger"></span>
                                <div class="form-text">Email resmi perusahaan</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="NoTelepon" class="form-label">
                                    <i class="bi bi-telephone"></i> No. Telepon
                                </label>
                                <input asp-for="NoTelepon" class="form-control" placeholder="08123456789" />
                                <span asp-validation-for="NoTelepon" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="Posisi" class="form-label">
                                    <i class="bi bi-briefcase"></i> Posisi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Posisi" class="form-select">
                                    <option value="">-- Pilih Posisi --</option>
                                    <option value="Software Developer">💻 Software Developer</option>
                                    <option value="Frontend Developer">🎨 Frontend Developer</option>
                                    <option value="Backend Developer">⚙️ Backend Developer</option>
                                    <option value="Full Stack Developer">🚀 Full Stack Developer</option>
                                    <option value="UI/UX Designer">🎭 UI/UX Designer</option>
                                    <option value="Project Manager">📋 Project Manager</option>
                                    <option value="QA Tester">🔍 QA Tester</option>
                                    <option value="DevOps Engineer">🔧 DevOps Engineer</option>
                                    <option value="Business Analyst">📊 Business Analyst</option>
                                    <option value="Marketing Specialist">📢 Marketing Specialist</option>
                                    <option value="HR Specialist">👥 HR Specialist</option>
                                    <option value="Finance Officer">💰 Finance Officer</option>
                                </select>
                                <span asp-validation-for="Posisi" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="Divisi" class="form-label">
                                    <i class="bi bi-diagram-3"></i> Divisi <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Divisi" class="form-select">
                                    <option value="">-- Pilih Divisi --</option>
                                    <option value="Development">💻 Development</option>
                                    <option value="Design">🎨 Design</option>
                                    <option value="Marketing">📢 Marketing</option>
                                    <option value="Finance">💰 Finance</option>
                                    <option value="Human Resources">👥 Human Resources</option>
                                    <option value="Operations">⚙️ Operations</option>
                                    <option value="Sales">💼 Sales</option>
                                </select>
                                <span asp-validation-for="Divisi" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-3">
                                <label asp-for="TglBergabung" class="form-label">
                                    <i class="bi bi-calendar-date"></i> Tanggal Bergabung <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TglBergabung" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="TglBergabung" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Salary Information -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5 class="text-primary border-bottom pb-2 mb-3">
                                <i class="bi bi-cash-stack"></i> Informasi Gaji
                            </h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="GajiPokok" class="form-label">
                                    <i class="bi bi-currency-dollar"></i> Gaji Pokok <span class="text-danger">*</span>
                                </label>
                                <input asp-for="GajiPokok"
                                       type="number"
                                       class="form-control"
                                       placeholder="5000000"
                                       min="1000000"
                                       max="100000000"
                                       step="1000"
                                       value="@Model.GajiPokok" />
                                <span asp-validation-for="GajiPokok" class="text-danger"></span>
                                <div class="form-text">
                                    Range: Rp 1.000.000 - Rp 100.000.000
                                    <br><small class="text-muted">Format: 7000000 (tanpa titik/koma)</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="bi bi-info-circle"></i> Referensi Gaji
                                </label>
                                <div class="alert alert-light">
                                    <small>
                                        • Junior: Rp 4.000.000<br>
                                        • Senior: Rp 7.000.000<br>
                                        • Lead: Rp 12.000.000<br>
                                        • Manager: Rp 15.000.000
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Reference -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <h6><i class="bi bi-lightbulb"></i> Tips Pengisian:</h6>
                                <div class="row">
                                    <div class="col-md-6">
                                        <small>
                                            • <strong>Username:</strong> Gunakan format nama.depan<br>
                                            • <strong>Email Personal:</strong> Email pribadi karyawan<br>
                                            • <strong>Email Kantor:</strong> Akan digunakan untuk komunikasi resmi
                                        </small>
                                    </div>
                                    <div class="col-md-6">
                                        <small>
                                            • <strong>NIK:</strong> Format EMP + nomor urut<br>
                                            • <strong>Password:</strong> Default: password123<br>
                                            • <strong>Posisi & Divisi:</strong> Sesuaikan dengan job desc
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <a href="@Url.Action("Index", "Karyawan")" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Kembali ke Daftar
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-person-plus"></i> Tambah Karyawan
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Info Cards -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-shield-check"></i> Akun Login
                    </div>
                    <div class="card-body">
                        <small>
                            Karyawan akan mendapat akun login dengan username dan password yang diisi.
                            Mereka bisa mengubah password setelah login pertama.
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <i class="bi bi-envelope"></i> Email System
                    </div>
                    <div class="card-body">
                        <small>
                            Email kantor akan digunakan untuk notifikasi sistem, pengajuan cuti,
                            dan komunikasi resmi perusahaan.
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <i class="bi bi-calendar-check"></i> Status Aktif
                    </div>
                    <div class="card-body">
                        <small>
                            Karyawan akan otomatis aktif setelah ditambahkan dan bisa langsung
                            menggunakan sistem presensi dan pengajuan cuti.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}