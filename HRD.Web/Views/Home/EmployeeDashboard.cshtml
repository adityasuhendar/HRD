<!-- HRD.Web/Views/Home/EmployeeDashboard.cshtml -->
@model HRD.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard Karyawan";
}

<!-- Header Section -->
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2>Selamat datang, @Model.NamaKaryawan!</h2>
                <p class="text-muted mb-0">@Model.TanggalHariIni.ToString("dddd, dd MMMM yyyy")</p>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Presensi Hari Ini Card -->
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-clock text-primary"></i> Presensi Hari Ini
                </h5>
                
                @if (Model.PresensiHariIni != null)
                {
                    <!-- Clock In/Out Information -->
                    <div class="row">
                        <!-- Clock In -->
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-success rounded-circle p-2 me-3">
                                    <i class="bi bi-clock text-white"></i>
                                </div>
                                <div>
                                    <h6 class="mb-0">Jam Masuk</h6>
                                    <span class="text-success fw-bold">
                                        @Model.PresensiHariIni.JamMasuk?.ToString("HH:mm")
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Clock Out -->
                        <div class="col-md-6">
                            @if (Model.PresensiHariIni.JamKeluar.HasValue)
                            {
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-info rounded-circle p-2 me-3">
                                        <i class="bi bi-clock-history text-white"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Jam Keluar</h6>
                                        <span class="text-info fw-bold">
                                            @Model.PresensiHariIni.JamKeluar?.ToString("HH:mm")
                                        </span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <button class="btn btn-outline-danger" onclick="clockOut()">
                                    <i class="bi bi-box-arrow-right"></i> Clock Out
                                </button>
                            }
                        </div>
                    </div>
                    
                    <!-- Status Information -->
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">
                                Status: <span class="badge bg-success">@Model.PresensiHariIni.StatusPresensi</span>
                            </small>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">
                                Total Jam: <strong>@Model.PresensiHariIni.TotalJam jam</strong>
                            </small>
                        </div>
                    </div>
                }
                else
                {
                    <!-- No Clock In Yet -->
                    <div class="text-center py-4">
                        <i class="bi bi-clock display-1 text-muted"></i>
                        <h6 class="mt-3">Belum Clock In Hari Ini</h6>
                        <a href="@Url.Action("ClockIn", "Presensi")" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Clock In Sekarang
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Quick Stats Card -->
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="bi bi-calendar-check text-success"></i> Cuti Saya
                </h6>
                <div class="text-center">
                    <h3 class="text-warning">@Model.TotalCutiMenunggu</h3>
                    <small class="text-muted">Menunggu Persetujuan</small>
                </div>
                <hr>
                <a href="@Url.Action("Create", "Cuti")" class="btn btn-sm btn-outline-primary w-100">
                    <i class="bi bi-plus"></i> Ajukan Cuti
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Riwayat Cuti Section -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- Card Header -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar text-primary"></i> Riwayat Cuti Terbaru
                    </h5>
                    <a href="@Url.Action("Index", "Cuti")" class="btn btn-sm btn-outline-primary">
                        Lihat Semua
                    </a>
                </div>
                
                <!-- Cuti Table -->
                @if (Model.CutiTerbaru.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Jenis Cuti</th>
                                    <th>Tanggal</th>
                                    <th>Durasi</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cuti in Model.CutiTerbaru)
                                {
                                    <tr>
                                        <td>@cuti.JenisCuti</td>
                                        <td>
                                            @cuti.TglMulai.ToString("dd/MM/yyyy") - 
                                            @cuti.TglSelesai.ToString("dd/MM/yyyy")
                                        </td>
                                        <td>@cuti.JumlahHari hari</td>
                                        <td>
                                            @if (cuti.StatusPersetujuan == "Pending")
                                            {
                                                <span class="badge bg-warning">Menunggu</span>
                                            }
                                            else if (cuti.StatusPersetujuan == "Disetujui")
                                            {
                                                <span class="badge bg-success">Disetujui</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Ditolak</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <!-- No Leave History -->
                    <div class="text-center py-3">
                        <i class="bi bi-calendar-x display-1 text-muted"></i>
                        <p class="text-muted mt-3">Belum ada riwayat cuti</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function clockOut() {
            if (confirm('Yakin ingin clock out sekarang?')) {
                $.post('@Url.Action("ClockOut", "Presensi")', { catatan: '' })
                    .done(function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert('Error: ' + response.message);
                        }
                    })
                    .fail(function() {
                        alert('Terjadi kesalahan sistem');
                    });
            }
        }
    </script>
}