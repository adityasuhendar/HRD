@model HRD.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard HRD";
}

<!-- Custom CSS untuk Dashboard Cards -->
<style>
    /* Dashboard Card Styling */
    .aegis-dashboard-card {
        background: var(--aegis-white);
        border-radius: 15px;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .aegis-dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

    /* Stats Cards */
    .stats-card {
        background: linear-gradient(135deg, var(--aegis-red), #ff6b85);
        color: var(--aegis-white);
        position: relative;
        overflow: hidden;
    }

        .stats-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            transform: scale(0);
            transition: transform 0.3s ease;
        }

        .stats-card:hover::before {
            transform: scale(1);
        }

        .stats-card.card-success {
            background: linear-gradient(135deg, #28a745, #20c997);
        }

        .stats-card.card-warning {
            background: linear-gradient(135deg, #ffc107, #fd7e14);
        }

        .stats-card.card-info {
            background: linear-gradient(135deg, #17a2b8, #6f42c1);
        }

    .stats-icon {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .stats-number {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
    }

    .stats-label {
        font-size: 0.875rem;
        opacity: 0.9;
        margin: 0;
    }

    /* Action Buttons */
    .action-btn {
        background: var(--aegis-white);
        border: 2px solid var(--aegis-red-light);
        color: var(--aegis-red);
        border-radius: 10px;
        padding: 1rem;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        transition: all 0.3s ease;
        margin-bottom: 0.75rem;
    }

        .action-btn:hover {
            background: var(--aegis-red);
            color: var(--aegis-white);
            border-color: var(--aegis-red);
            transform: translateX(5px);
        }

        .action-btn i {
            width: 20px;
            text-align: center;
        }

    /* Table Styling */
    .custom-table {
        background: var(--aegis-white);
        border-radius: 10px;
        overflow: hidden;
    }

        .custom-table thead {
            background: var(--aegis-red-light);
            color: var(--aegis-red);
        }

        .custom-table tbody tr:hover {
            background: var(--aegis-red-light);
        }

    /* Buttons */
    .btn-aegis-success {
        background: #28a745;
        border: none;
        border-radius: 8px;
        color: white;
        padding: 0.375rem 0.75rem;
        transition: all 0.3s ease;
    }

        .btn-aegis-success:hover {
            background: #218838;
            color: white;
            transform: scale(1.05);
        }

    .btn-aegis-danger {
        background: #dc3545;
        border: none;
        border-radius: 8px;
        color: white;
        padding: 0.375rem 0.75rem;
        transition: all 0.3s ease;
    }

        .btn-aegis-danger:hover {
            background: #c82333;
            color: white;
            transform: scale(1.05);
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
</style>

<!-- Stats Cards Row -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card aegis-dashboard-card stats-card">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="stats-label">Total Karyawan</p>
                        <h3 class="stats-number">@Model.TotalKaryawan</h3>
                    </div>
                    <div class="stats-icon">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card aegis-dashboard-card stats-card card-success">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="stats-label">Hadir Hari Ini</p>
                        <h3 class="stats-number">@Model.KaryawanHadirHariIni</h3>
                    </div>
                    <div class="stats-icon">
                        <i class="bi bi-check-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card aegis-dashboard-card stats-card card-warning">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="stats-label">Cuti Pending</p>
                        <h3 class="stats-number">@Model.CutiMenungguApproval</h3>
                    </div>
                    <div class="stats-icon">
                        <i class="bi bi-calendar-event"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card aegis-dashboard-card stats-card card-info">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="stats-label">Absensi Rate</p>
                        <h3 class="stats-number">95%</h3>
                    </div>
                    <div class="stats-icon">
                        <i class="bi bi-graph-up"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Pengajuan Cuti Menunggu -->
    <div class="col-lg-8 mb-4">
        <div class="card aegis-dashboard-card">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="card-title mb-0 d-flex align-items-center">
                        <i class="bi bi-calendar-check text-warning me-2"></i>
                        Pengajuan Cuti Menunggu Persetujuan
                    </h5>
                    <a href="@Url.Action("Manage", "Cuti")" class="btn btn-outline-primary btn-sm" style="border-radius: 8px;">
                        <i class="bi bi-gear me-1"></i>Kelola Semua
                    </a>
                </div>

                @if (Model.CutiMenungguList.Any())
                {
                    <div class="table-responsive">
                        <table class="table custom-table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th style="border: none;">Karyawan</th>
                                    <th style="border: none;">Jenis Cuti</th>
                                    <th style="border: none;">Tanggal</th>
                                    <th style="border: none;">Durasi</th>
                                    <th style="border: none;" class="text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cuti in Model.CutiMenungguList.Take(5))
                                {
                                    <tr>
                                        <td style="border: none;">
                                            <div>
                                                <strong>@cuti.NamaKaryawan</strong><br>
                                                <small class="text-muted">@cuti.NIKKaryawan</small>
                                            </div>
                                        </td>
                                        <td style="border: none;">
                                            <span class="badge bg-light text-dark">@cuti.JenisCuti</span>
                                        </td>
                                        <td style="border: none;">
                                            <div>
                                                @cuti.TglMulai.ToString("dd/MM/yyyy")<br>
                                                <small class="text-muted">s/d @cuti.TglSelesai.ToString("dd/MM/yyyy")</small>
                                            </div>
                                        </td>
                                        <td style="border: none;">
                                            <strong>@cuti.JumlahHari hari</strong>
                                        </td>
                                        <td style="border: none;" class="text-center">
                                            <button class="btn btn-aegis-success btn-sm me-1" onclick="quickApprove(@cuti.IdCuti)" title="Setujui">
                                                <i class="bi bi-check"></i>
                                            </button>
                                            <button class="btn btn-aegis-danger btn-sm" onclick="quickReject(@cuti.IdCuti)" title="Tolak">
                                                <i class="bi bi-x"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-calendar-check"></i>
                        <h6>Tidak ada pengajuan cuti yang menunggu</h6>
                        <p class="text-muted">Semua pengajuan cuti sudah diproses</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4 mb-4">
        <div class="card aegis-dashboard-card">
            <div class="card-body p-4">
                <h5 class="card-title mb-4 d-flex align-items-center">
                    <i class="bi bi-lightning me-2" style="color: var(--aegis-red);"></i>
                    Quick Actions
                </h5>

                <div class="d-grid gap-2">
                    <a href="@Url.Action("Create", "Karyawan")" class="action-btn">
                        <i class="bi bi-person-plus"></i>
                        <span>Tambah Karyawan</span>
                    </a>

                    <a href="@Url.Action("TodaySummary", "Presensi")" class="action-btn">
                        <i class="bi bi-calendar-day"></i>
                        <span>Presensi Hari Ini</span>
                    </a>

                    <a href="@Url.Action("Manage", "Cuti")" class="action-btn">
                        <i class="bi bi-calendar-event"></i>
                        <span>Kelola Cuti</span>
                    </a>

                    <a href="#" class="action-btn">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Generate Report</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function quickApprove(cutiId) {
            if (confirm('Setujui pengajuan cuti ini?')) {
                $.post('@Url.Action("QuickApprove", "Cuti")/' + cutiId)
                    .done(function(response) {
                        if (response.success) {
                            // Show success message with better styling
                            showNotification('Pengajuan cuti berhasil disetujui!', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showNotification('Error: ' + response.message, 'error');
                        }
                    });
            }
        }

        function quickReject(cutiId) {
            var reason = prompt('Alasan penolakan (opsional):');
            if (reason !== null) {
                $.post('@Url.Action("QuickReject", "Cuti")/' + cutiId, { reason: reason })
                    .done(function(response) {
                        if (response.success) {
                            showNotification('Pengajuan cuti berhasil ditolak!', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showNotification('Error: ' + response.message, 'error');
                        }
                    });
            }
        }

        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const icon = type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle';

            const notification = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert" style="border-radius: 10px; position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    <i class="bi ${icon}"></i> ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;

            $('body').append(notification);

            // Auto remove after 3 seconds
            setTimeout(() => {
                $('.alert').fadeOut();
            }, 3000);
        }

        // Dashboard animations
        $(document).ready(function() {
            // Animate stats cards on load
            $('.stats-card').each(function(index) {
                $(this).delay(index * 100).animate({
                    opacity: 1
                }, 500);
            });
        });
    </script>
}