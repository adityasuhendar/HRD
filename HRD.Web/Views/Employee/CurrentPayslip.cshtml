<!-- Fix: HRD.Web/Views/Employee/CurrentPayslip.cshtml -->
@model HRD.Web.Models.DTOs.PayrollResponse
@{
    ViewData["Title"] = "Slip Gaji Bulan Ini";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>
            <i class="bi bi-receipt text-primary"></i> Slip Gaji @ViewBag.MonthName @ViewBag.Year
        </h2>
        <p class="text-muted">Slip gaji bulan berjalan</p>
    </div>
    @if (Model != null)
    {
        <div>
            <button onclick="window.print()" class="btn btn-primary">
                <i class="bi bi-printer"></i> Print
            </button>
            <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Kembali
            </a>
        </div>
    }
</div>

@if (Model != null)
{
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt"></i> Slip Gaji - @ViewBag.MonthName @ViewBag.Year
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Employee Info -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-primary">Informasi Karyawan</h6>
                            <table class="table table-borderless table-sm">
                                <tr><td width="120">NIK:</td><td><strong>@Model.NIK</strong></td></tr>
                                <tr><td>Nama:</td><td><strong>@Model.NamaLengkap</strong></td></tr>
                                <tr><td>Posisi:</td><td>@Model.Posisi</td></tr>
                                <tr><td>Divisi:</td><td>@Model.Divisi</td></tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-success">Periode Gaji</h6>
                            <table class="table table-borderless table-sm">
                                <tr><td width="120">Bulan:</td><td><strong>@ViewBag.MonthName @ViewBag.Year</strong></td></tr>
                                <tr><td>Jam Kerja:</td><td>@Model.TotalJamKerja jam</td></tr>
                                <tr>
                                    <td>Status:</td>
                                    <td>
                                        @if (Model.StatusBayar == "Sudah Bayar")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check"></i> Sudah Dibayar
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock"></i> Belum Dibayar
                                            </span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Salary Details -->
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>Komponen</th>
                                    <th class="text-end">Jumlah</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Gaji Pokok</strong></td>
                                    <td class="text-end"><strong>@Model.GajiPokok.ToString("C0", new System.Globalization.CultureInfo("id-ID"))</strong></td>
                                </tr>
                                @if (Model.Tunjangan > 0)
                                {
                                    <tr>
                                        <td class="text-success">+ Tunjangan</td>
                                        <td class="text-end text-success">@Model.Tunjangan.ToString("C0", new System.Globalization.CultureInfo("id-ID"))</td>
                                    </tr>
                                }
                                @if (Model.Potongan > 0)
                                {
                                    <tr>
                                        <td class="text-danger">- Potongan</td>
                                        <td class="text-end text-danger">@Model.Potongan.ToString("C0", new System.Globalization.CultureInfo("id-ID"))</td>
                                    </tr>
                                }
                                <tr class="table-primary">
                                    <td><strong>TOTAL GAJI</strong></td>
                                    <td class="text-end"><strong class="text-primary fs-5">@Model.TotalGaji.ToString("C0", new System.Globalization.CultureInfo("id-ID"))</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Keterangan))
                    {
                        <div class="mt-3">
                            <h6>Keterangan:</h6>
                            <p class="text-muted">@Model.Keterangan</p>
                        </div>
                    }

                    <div class="text-center mt-4">
                        <small class="text-muted">
                            Slip gaji dibuat pada @Model.TglDibuat.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        @if (!string.IsNullOrEmpty(ViewBag.Message as string))
        {
            <i class="bi bi-info-circle display-1 text-info"></i>
            <h4 class="mt-3">@ViewBag.Message</h4>
            <p class="text-muted">Slip gaji akan tersedia setelah HRD memproses payroll bulan ini</p>
        }
        else if (!string.IsNullOrEmpty(ViewBag.Error as string))
        {
            <i class="bi bi-exclamation-triangle display-1 text-danger"></i>
            <h4 class="mt-3">Terjadi Kesalahan</h4>
            <p class="text-muted">@ViewBag.Error</p>
        }
    </div>
}

@section Styles {
    <style>
        /* Print styles - FIXED CSS */
        @@media print {
            body * {
                visibility: hidden;
            }

            .card, .card * {
                visibility: visible;
            }

            .card {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
            }

            .btn, .navbar {
                display: none !important;
            }
        }
    </style>
}